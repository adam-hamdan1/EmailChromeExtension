{
  "manifest_version": 3,
  "name": "Email Sorting Chrome Extension",
  "version": "1.0",
  "description": "Manage and execute email rules.",
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "ui/run_rules.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
